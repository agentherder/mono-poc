{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["dom"],
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "chrome"
    ],
    "rootDir": "../../",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["../../libs/shared/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".wxt/wxt.d.ts",
    "../../libs/shared/src/**/*.ts",
    "../../libs/shared/src/**/*.tsx"
  ],
  "exclude": [
    ".output",
    ".wxt",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "../../libs/shared/src/**/*.spec.ts",
    "../../libs/shared/src/**/*.spec.tsx"
  ]
}
