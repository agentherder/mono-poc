{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["dom"],
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "chrome"
    ],
    "rootDir": "entrypoints"
  },
  "exclude": [
    "out-tsc",
    "dist",
    "entrypoints/**/*.spec.ts",
    "entrypoints/**/*.spec.tsx",
    "vite.config.ts",
    "vitest.config.ts",
    "eslint.config.mjs"
  ],
  "include": ["entrypoints/**/*.ts", "entrypoints/**/*.tsx", ".wxt/wxt.d.ts"]
}
