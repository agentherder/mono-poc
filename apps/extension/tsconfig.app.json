{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["dom"],
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "chrome"
    ],
    "rootDir": "src"
  },
  "exclude": [
    ".output",
    ".wxt",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "vite.config.ts",
    "vitest.config.ts",
    "eslint.config.mjs"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", ".wxt/wxt.d.ts"]
}
